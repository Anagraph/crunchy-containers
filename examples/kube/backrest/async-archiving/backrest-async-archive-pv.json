{
    "apiVersion": "v1",
    "kind": "PersistentVolume",
    "metadata": {
        "name": "br-aa-pgdata",
        "labels": {
            "name": "br-aa-pgdata"
        }
    },
    "spec": {
        "capacity": {
            "storage": "$CCP_STORAGE_CAPACITY"
        },
        "accessModes": ["$CCP_STORAGE_MODE"],
        "hostPath": {
            "path": "$CCP_STORAGE_PATH/backrest-async-archive"
        },
        "persistentVolumeReclaimPolicy": "Retain"
    }
}

{
    "apiVersion": "v1",
    "kind": "PersistentVolume",
    "metadata": {
        "name": "br-aa-backups",
        "labels": {
            "name": "br-aa-backups"
        }
    },
    "spec": {
        "capacity": {
            "storage": "$CCP_STORAGE_CAPACITY"
        },
        "accessModes": ["$CCP_STORAGE_MODE"],
        "hostPath": {
            "path": "$CCP_STORAGE_PATH/backrest-async-archive"
        },
        "persistentVolumeReclaimPolicy": "Retain"
    }
}
