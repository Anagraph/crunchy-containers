{
    "apiVersion": "v1",
    "kind": "PersistentVolume",
    "metadata": {
        "name": "br-pgdata",
        "labels": {
            "name": "br-pgdata"
        }
    },
    "spec": {
        "capacity": {
            "storage": "$CCP_STORAGE_CAPACITY"
        },
        "accessModes": ["$CCP_STORAGE_MODE"],
        "nfs": {
            "path": "$CCP_STORAGE_PATH/backrest",
            "server": "$CCP_NFS_IP"
        },
        "persistentVolumeReclaimPolicy": "Retain"
    }
}

{
    "apiVersion": "v1",
    "kind": "PersistentVolume",
    "metadata": {
        "name": "br-backups",
        "labels": {
            "name": "br-backups"
        }
    },
    "spec": {
        "capacity": {
            "storage": "$CCP_STORAGE_CAPACITY"
        },
        "accessModes": ["$CCP_STORAGE_MODE"],
        "nfs": {
            "path": "$CCP_STORAGE_PATH/backrest",
            "server": "$CCP_NFS_IP"
        },
        "persistentVolumeReclaimPolicy": "Retain"
    }
}
